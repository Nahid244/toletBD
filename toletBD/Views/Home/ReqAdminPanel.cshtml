@model toletDb.GovernModel
@{
    ViewBag.Title = "ReqAdminPanel";
}
<div style="height:40vh;">



</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <!-- Sidebar-->
            <nav id="sidebar">


                <ul class="list-unstyled components">
                    <p>toletBD</p>
                    <li class="">
                        <a class="fa fa-user" href="/Home/Users">Account</a>

                    </li>
                    <li class="">
                        <a class="fa fa-pencil" href="/Home/userAccount">updateAccount</a>

                    </li>
                    @if (User.Identity.Name != "Admin")
                    {
                        <li>
                            <a class="fa fa-comments" href="/Home/ReqAdminPanel">ReqAdminPanel</a>
                        </li>

                    }

                    <li>
                        <a class="fa fa-bell" href="/Home/postAd">postAd</a>
                    </li>
                    <li>
                        <a class="fa fa-level-down" href="#">Logout</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-10">

            <div class="container">
                <h1 class="fa fa-user">Request Admin</h1>
                <hr>
                <div class="row">
                    <!-- left column -->
                    <!-- edit form column -->
                    <div class="col-9 personal-info">
                        <div class="alert alert-info alert-dismissable">
                            <a class="panel-close close" data-dismiss="alert">×</a>
                            <i class="fa fa-coffee"></i>
                            <strong>Attention</strong>
                        </div>
                        <h3>Request</h3>
                        @using (Html.BeginForm("ReqAdminPanel", "Home", FormMethod.Post))
                        {
                            <form class="form-horizontal" role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Request info:</label>
                                    <div class="col-lg-8">
                                        <input class="form-control" name="msg" type="text" value="">
                                    </div>
                                </div>
                               

                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-8">
                                       
                                        <input type="submit" class="btn btn-default" value="send" >
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
            <hr>
        </div>

    </div>
</div>


